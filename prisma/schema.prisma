generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                    @id @default(autoincrement())
  email                String                 @unique
  firstName            String
  lastName             String
  passwordHash         String
  UserChatTypeRelation UserChatTypeRelation[]
  OpenAIModel          OpenAIModel?           @relation(fields: [openAIModelId], references: [id])
  openAIModelId        String?
  chats                Chat[]
}

model Chat {
  id     String @id @default(uuid())
  model  String
  name   String
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model ChatType {
  id                   Int                    @id @default(autoincrement())
  name                 String
  description          String?
  UserChatTypeRelation UserChatTypeRelation[]
}

model OpenAIModel {
  id      String @id
  name    String
  object  String
  userIds User[]
}

model UserChatTypeRelation {
  userId     Int
  chatTypeId Int
  chatType   ChatType @relation(fields: [chatTypeId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@id([userId, chatTypeId])
}
