generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  email         String       @unique
  firstName     String
  lastName      String
  passwordHash  String
  OpenAIModel   OpenAIModel? @relation(fields: [openAIModelId], references: [id])
  openAIModelId String?
  chats         Chat[]
}

model Chat {
  id     String @id @default(uuid())
  model  String
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model OpenAIModel {
  id       String @id
  object   String
  owned_by String
  created  BigInt
  userIds  User[]
}
